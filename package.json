{
  "name": "nexttale-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "NextTale Monorepo - AI-powered interactive content platform",
  "keywords": [
    "ai",
    "artificial-intelligence",
    "game-generator",
    "story-generator",
    "interactive-content",
    "no-code",
    "ai-games",
    "ai-stories"
  ],
  "homepage": "https://nexttale.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammadreza87/nexttale.git"
  },
  "author": "Next Tale Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @nexttale/web dev",
    "dev:joyixir": "pnpm --filter @joyixir/app dev",
    "build": "pnpm --filter @nexttale/web build",
    "build:joyixir": "pnpm --filter @joyixir/app build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm --filter @nexttale/web test",
    "test:run": "pnpm --filter @nexttale/web test:run",
    "test:coverage": "pnpm --filter @nexttale/web test:coverage",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json,md}\"",
    "prepare": "husky || true",
    "db:push": "supabase db push",
    "db:types": "supabase gen types typescript --local > packages/shared/src/lib/database.types.ts",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.14.2"
}
